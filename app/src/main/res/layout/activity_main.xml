<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#31B7C9"
    android:backgroundTint="#31B7C9"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text_greeting"
        android:layout_width="251dp"
        android:layout_height="46dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="80dp"
        android:fontFamily="@font/questrial_regular"
        android:textColor="#FFFFFF"
        android:text="@string/main_label"
        android:textAlignment="center"

        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_username" />

    <TextView
        android:id="@+id/text_days"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="180dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="180dp"
        android:fontFamily="@font/questrial_regular"
        android:text="@string/days"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_greeting" />

    <TextView
        android:id="@+id/text_username"
        android:layout_width="158dp"
        android:layout_height="30dp"
        android:layout_marginStart="126dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="127dp"
        android:fontFamily="@font/questrial_regular"
        android:text="@string/username"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/button_exercise"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="51dp"
        android:background="@drawable/exercise_resize"
        android:onClick="onExerciseClick"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_greeting" />

    <TextView
        android:id="@+id/label_exercise"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/questrial_regular"
        android:text="@string/button_exer"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_exercise" />

    <ImageButton
        android:id="@+id/button_diary"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="51dp"
        android:layout_marginEnd="60dp"
        android:background="@drawable/diary_resize"
        android:onClick="onDiaryClick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_greeting" />

    <TextView
        android:id="@+id/label_diary"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="60dp"
        android:text="@string/button_diary"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="24sp"
        android:fontFamily="@font/questrial_regular"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_diary" />

    <ImageButton
        android:id="@+id/button_vital"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="21dp"
        android:onClick="onVitalClick"
        android:background="@drawable/vitals_resize"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_exercise" />

    <TextView
        android:id="@+id/label_vital"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="12dp"
        android:text="@string/button_vital"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="24sp"
        android:fontFamily="@font/questrial_regular"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_vital" />

    <ImageButton
        android:id="@+id/button_news"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="60dp"
        android:onClick="onNewsClick"
        android:background="@drawable/news_resize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_diary" />

    <TextView
        android:id="@+id/label_news"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="60dp"
        android:text="@string/button_news"
        android:fontFamily="@font/questrial_regular"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_news" />

    <ImageButton
        android:id="@+id/button_contact"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="21dp"
        android:onClick="onQuicklineClick"
        android:background="@drawable/contact_resize"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_vital" />

    <TextView
        android:id="@+id/label_contact"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="9dp"
        android:text="@string/button_cont"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="24sp"
        android:fontFamily="@font/questrial_regular"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_contact" />

    <ImageButton
        android:id="@+id/button_settings"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="60dp"
        android:onClick="onSettingClick"
        android:background="@drawable/setting_resize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_news" />

    <TextView
        android:id="@+id/label_settings"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="60dp"
        android:text="@string/button_set"
        android:textSize="24sp"
        android:fontFamily="@font/questrial_regular"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_settings" />















</androidx.constraintlayout.widget.ConstraintLayout>